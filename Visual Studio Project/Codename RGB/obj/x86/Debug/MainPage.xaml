<Page
    x:Class="Codename_RGB.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Codename_RGB"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#FF2D3341" Padding="0" RequestedTheme="Dark">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="60"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="5" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button x:ConnectionId='15' x:Name="button" Content="Button" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Foreground="White" Background="#006A6A6A" BorderBrush="#FF636363" d:LayoutOverrides="LeftMargin, RightMargin, TopMargin, BottomMargin" FontSize="48" Padding="0,0,0,4"/>
            <Button x:ConnectionId='16' x:Name="button_Copy" Content="Button" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" FontSize="48" Foreground="White" Background="#006A6A6A" BorderBrush="#FF636363" d:LayoutOverrides="LeftMargin, RightMargin, TopMargin, BottomMargin" Grid.Column="1" Padding="0"/>
            <Button x:ConnectionId='17' x:Name="button_Copy1" Content="Button" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" FontSize="48" Foreground="White" Background="#006A6A6A" BorderBrush="#FF636363" d:LayoutOverrides="LeftMargin, RightMargin, TopMargin, BottomMargin" Grid.Column="2" Padding="0"/>
            <Button x:ConnectionId='18' x:Name="button_Copy2" Content="Button" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" FontSize="48" Foreground="White" Background="#006A6A6A" BorderBrush="#FF636363" d:LayoutOverrides="LeftMargin, RightMargin, TopMargin, BottomMargin" Grid.Column="3" Padding="0"/>
            <Button x:ConnectionId='19' x:Name="button_Copy3" Content="Button" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" FontSize="48" Foreground="White" Background="#006A6A6A" BorderBrush="#FF636363" d:LayoutOverrides="LeftMargin, RightMargin, TopMargin, BottomMargin" Grid.Column="4" Padding="0"/>
        </Grid>
        <Grid x:ConnectionId='1' x:Name="rGrid" Grid.Column="2" Grid.Row="1" d:LayoutOverrides="LeftMargin, RightMargin, TopMargin, BottomMargin, LeftPosition, RightPosition, TopPosition, BottomPosition">
            <Grid.RowDefinitions>
                <RowDefinition Height="92*"/>
                <RowDefinition Height="807*"/>
            </Grid.RowDefinitions>
            <TextBlock x:ConnectionId='13' x:Name="rLabel" TextWrapping="Wrap" Text="0" Margin="0" FontSize="80" TextAlignment="Center" FontFamily="Segoe UI Light" Foreground="#FFEEEEEE" VerticalAlignment="Center" Height="86"/>
            <Slider x:ConnectionId='14' x:Name="rSlider" Orientation="Vertical" Maximum="255" RequestedTheme="Dark" Margin="0,10,0,20" RenderTransformOrigin="0.5,0.5" Grid.Row="1" d:LayoutOverrides="Width, LeftPosition, RightPosition" HorizontalAlignment="Center"                                     Foreground="#FFE40E0E"/>
        </Grid>
        <Grid x:ConnectionId='2' x:Name="gGrid" Grid.Column="3" Grid.Row="1" d:LayoutOverrides="LeftMargin, RightMargin, TopMargin, BottomMargin, LeftPosition, RightPosition, TopPosition, BottomPosition">
            <Grid.RowDefinitions>
                <RowDefinition Height="92*"/>
                <RowDefinition Height="807*"/>
            </Grid.RowDefinitions>
            <TextBlock x:ConnectionId='11' x:Name="gLabel" TextWrapping="Wrap" Text="0" Margin="0" FontSize="80" TextAlignment="Center" FontFamily="Segoe UI Light" Foreground="#FFEEEEEE" VerticalAlignment="Center" Height="86"/>
            <Slider x:ConnectionId='12' x:Name="gSlider" Orientation="Vertical" Maximum="255" RequestedTheme="Dark" Margin="0,10,0,20" RenderTransformOrigin="0.5,0.5" Grid.Row="1" d:LayoutOverrides="Width, LeftPosition, RightPosition" HorizontalAlignment="Center" Foreground="#FF00D714"                                    />
        </Grid>
        <Grid x:ConnectionId='3' x:Name="bGrid" Grid.Column="4" Grid.Row="1" d:LayoutOverrides="LeftMargin, RightMargin, TopMargin, BottomMargin, LeftPosition, RightPosition, TopPosition, BottomPosition">
            <Grid.RowDefinitions>
                <RowDefinition Height="92*"/>
                <RowDefinition Height="807*"/>
            </Grid.RowDefinitions>
            <TextBlock x:ConnectionId='9' x:Name="bLabel" TextWrapping="Wrap" Text="0" Margin="0" FontSize="80" TextAlignment="Center" FontFamily="Segoe UI Light" Foreground="#FFEEEEEE" VerticalAlignment="Center" Height="86"/>
            <Slider x:ConnectionId='10' x:Name="bSlider" Orientation="Vertical" Maximum="255" RequestedTheme="Dark" Margin="0,10,0,20" RenderTransformOrigin="0.5,0.5" Grid.Row="1" d:LayoutOverrides="Width, LeftPosition, RightPosition" HorizontalAlignment="Center"                                    />
        </Grid>
        <Grid Grid.Column="5" Height="60" Width="1350">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="163"/>
                <ColumnDefinition Width="241"/>
                <ColumnDefinition Width="90"/>
            </Grid.ColumnDefinitions>
            <TextBlock x:ConnectionId='6' x:Name="textBlock" Margin="0,9,0,8" TextWrapping="Wrap" Text="Arduino IP:" Grid.Column="1" FontSize="32" Padding="0" VerticalAlignment="Center" FlowDirection="RightToLeft" Height="43"/>
            <TextBox x:ConnectionId='7' x:Name="ipTextBox" Grid.Column="2" Margin="10" TextWrapping="Wrap" Text="" RequestedTheme="Dark" FontSize="24" PlaceholderText="Ex: 192.168.1.2" Padding="10,0"/>
            <Button x:ConnectionId='8' x:Name="connectButton" Content="Connect" Grid.Column="3" HorizontalAlignment="Stretch" Margin="0,13,0,12" VerticalAlignment="Center" Height="35" FontSize="18.667" Padding="0"                            />
        </Grid>
        <TextBlock x:ConnectionId='4' x:Name="statusTextBlock" Grid.Column="5" Height="30" Margin="0" Grid.Row="2" TextWrapping="Wrap" Text="" VerticalAlignment="Center" TextAlignment="Right" FontSize="24"/>
        <ProgressBar x:ConnectionId='5' x:Name="loadingBar" Grid.Column="5" Height="20" Margin="10,0" Grid.Row="2" VerticalAlignment="Center" IsIndeterminate="True"/>

    </Grid>
</Page>

